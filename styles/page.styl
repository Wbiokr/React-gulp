$h-color=#2981d9
.wkr_page
  width 100%
  display flex
  height 60px
  align-items center
  padding-left 30px
  section
    margin-right 20px
    span
      border 1px solid #ccc
      padding 7px 15px
      margin 0 4px
      cursor pointer
      float left
      background #fff
      transition all ease .3s
      &:hover
        color $h-color
        border-color $h-color
      &.more
        border 0
        line-height 100%
        background transparent
      &.selected
        color $h-color
        border-color $h-color
    input
      float left
      height 32px
      width 56px
      text-align center
      display inline
      margin 0 4px
      border 1px solid #ccc
      background #fff

    i
      float left
      font-style normal
      line-height 28px