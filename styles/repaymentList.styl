
.repayment
  padding 20px 
  *
    text-shadow none
  >h2
    height 40px
    line-height @height
    background #f0f0ff
    letter-spacing 5px
    padding-left 30px
    font-size 18px
    font-weight 500
    border 1px solid #ccc
    overflow hidden
    span
      display block
    // color blue
  >section.dateSelect
    display flex
    justify-content space-between
    align-items center
    height 80px
    padding 0 40px
    overflow hidden
    p
      // height 26px
      input,button
        height 31px
        background #f5f5f5
        border 1px solid #c6c6c6
        box-sizing border-box
        // &:[type='button']
      input
        padding-left 1em
      button
        height 31px
        padding 0 20px
        cursor pointer
        transition all ease 0.3s
        &:hover
          color #008000
          border-color @color
      select
        height 30px
      span
        color #008000
  >section.list
    width 1300px
    margin 0 auto
    ul
      li
        line-height 30px
        display flex
        justify-content space-around
        &.hidden
          display none
        &:first-child
          background #f0f0f0
          color #008000
          span
            font-size 12px !important
            background transparent !important
        span
          font-size 12px 
          flex 1
          display flex
          // padding 0 10px
          justify-content space-around
          align-items center
          flex-direction column
          border 1px solid #dddddd
          transition all ease 0.3s
          cursor default
          // &:nth-child(1),&:nth-child(11),&:nth-child(12)
          //   flex 0
          
          &:hover
            // transform scale(1.2)
            // font-weight 600
            font-size 1.2*@font-size
            background #ddd
          &:last-child,&:first-child
            font-size 12px !important
            background transparent !important
          >i
            font-style normal
            background #ccc
            border-radius 10px
            line-height 24px
            padding 0 10px
            cursor pointer
            transition all linear 0.3s
            &:hover
              background #666
              color #fff
          >em
            height 20px
            width @height
            border 1px solid #ccc
            background #dedede
            border-radius 3px
            &.current
              background lightblue
            // color 
            // margin 8px 0
  >footer
    padding 20px 0
    display none
    &.current
      display block
    .total_msg
      padding-left 40px
      line-height 40px
      background #f0f0f0
      color #008000
      font-size 16px
      span
        font-weight 600
        margin-right 50px
        color #333333
  >aside
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background rgba(0,0,0,.65)
    z-index 5
    display none
    overflow hidden
    &.current
      display block
    >section
      position absolute
      top 50%
      left 50%
      // transform translate(-50%,-50%)
      margin-left -200px
      margin-top -150px
      background #fff
      padding 20px
      // box-shadow 0 0 40px 2px rgba(0,0,0,.2)
      box-shadow 0 0 40px 2px rgba(0,0,0,0.2), 0 0 57px -8px rgba(0,0,0,0.2) inset
      border-radius 10px
      display none
      &.current
        display block
      h3
        line-height 40px
        letter-spacing 3px
        font-size 18px
        border-bottom 1px solid #CCD
        >span
          float right
          margin-right 15px
          cursor pointer
          font-weight 500
          transition all ease 0.28s
          color red
          &:hover
            transform rotate(-180deg)
      div
        width 360px
        padding-top 30px
        >p
          &:first-child
            font-size 16px
            // text-indent 2em
            color #44444
          &:last-child
            display flex
            justify-content center
            align-content center
            // height 
            margin-top 30px
            button
              font-size 17px
              border 1px solid rgba(0,128,0,.5)
              padding 2px 10px
              margin 0 20px
              transition all linear 0.2s
              border-radius 4px
              cursor pointer
              &:hover
                box-shadow 0 0 21px -4px rgba(10,100,10,0.9)
                color rgba(0,128,0,0.9)
                // font-size 0.8*@font-size
  article
    >section.toTop
      img
        position fixed 
        right 20px
        bottom 30px
        display none
        cursor pointer
        &.current
          display block




